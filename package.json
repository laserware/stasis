{
  "name": "@laserware/stasis",
  "version": "3.0.2",
  "description": "State management using Redux libraries.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "url": "git+https://github.com/laserware/stasis.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "preversion": "pnpm lint && pnpm check:types",
    "version": "pnpm format && git add -A src",
    "postversion": "git push && git push --tags",
    "check:format": "prettier --check src",
    "check:types": "tsc --noEmit",
    "format": "prettier --cache --write src",
    "lint": "eslint --cache src",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.1.0",
    "redux-saga": "^1.3.0"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^1.2.1",
    "@rushstack/eslint-patch": "^1.7.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
