{
  "name": "@laserware/stasis",
  "version": "2.0.0",
  "description": "State management using Redux libraries.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "url": "https://github.com/laserware/stasis.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "preversion": "pnpm lint && pnpm typecheck",
    "version": "pnpm format && git add -A src",
    "postversion": "git push && git push --tags",
    "lint": "eslint --cache src",
    "format": "prettier --write \"src/**/**.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "redux-saga": "^1.2.3"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^1.1.0",
    "@rushstack/eslint-patch": "^1.6.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
