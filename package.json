{
  "name": "@laserware/stasis",
  "version": "3.0.2",
  "description": "State management using Redux libraries.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "url": "https://github.com/laserware/stasis.git",
    "type": "git"
  },
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "redux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "preversion": "npm run eslint && npm run typecheck",
    "version": "npm run prettier && git add -A src",
    "postversion": "git push && git push --tags",
    "eslint": "eslint --cache src",
    "prettier:ci": "prettier --check src",
    "prettier": "prettier --cache --write src",
    "typecheck": "tsc --noEmit",
    "vitest": "vitest"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.1",
    "redux-saga": "^1.3.0"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^2.0.0",
    "@rushstack/eslint-patch": "^1.7.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
