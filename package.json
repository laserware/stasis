{
  "name": "@laserware/stasis",
  "version": "4.0.2",
  "description": "State management using Redux libraries.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laserware/stasis.git"
  },
  "bugs": "https://github.com/laserware/stasis/issues",
  "author": "Mike Rourke <mike.w.rourke@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "redux",
    "redux-saga",
    "sagas",
    "state-management"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && cd dist && npx prettier --write .",
    "prepublishOnly": "npm run build",
    "preversion": "npm run eslint && npm run typecheck",
    "version": "npm run prettier && git add -A src",
    "postversion": "git push && git push --tags",
    "eslint": "eslint --cache src  tsup.config.ts",
    "prettier": "prettier --cache --write src",
    "prettier:ci": "prettier --check src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "redux-saga": "^1.3.0"
  },
  "devDependencies": {
    "@laserware/eslint-config": "^5.3.0",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
